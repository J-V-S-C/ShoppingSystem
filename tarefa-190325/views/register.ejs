<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
  </head>

  <body>
    <style>
      .main {
        margin: 0;
        display: flex;
        justify-items: center;
        align-items: center;
        flex-direction: column;
      }
      .main-menu {
        margin: 0;
        display: flex;
        flex-direction: row;
        padding: 20;
        justify-items: center;
        align-items: center;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .register-container {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 40px;
        width: 100%;
        max-width: 400px;
      }

      h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
      }

      .input-group {
        margin-bottom: 20px;
      }

      .input-group label {
        display: block;
        margin-bottom: 5px;
        color: #333;
      }

      .input-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
      }

      .input-group input:focus {
        border-color: #0056b3;
        outline: none;
      }

      .btn-entrar {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
      }

      .btn-entrar:hover {
        background-color: #0056b3;
      }

      .p-login {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
        color: #666;
      }

      .btn-login {
        display: block;
        text-align: center;
        margin-top: 8px;
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
      }

      .btn-login:hover {
        text-decoration: underline;
      }
    </style>

    <div class="register-container">
      <form class="register-form" action="/register" method="POST">
        <h2>Criar conta</h2>

        <div class="input-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="Digite seu email"
          />
        </div>

        <div class="input-group">
          <label for="nome">Nome</label>
          <input
            type="text"
            id="nome"
            name="nome"
            required
            placeholder="Digite seu email"
          />
        </div>

        <div class="input-group">
          <label for="sobrenome">sobrenome</label>
          <input
            type="text"
            id="sobrenome"
            name="sobrenome"
            required
            placeholder="Digite seu email"
          />
        </div>

        <div class="input-group">
          <label for="senha">Senha</label>
          <input
            type="password"
            id="senha"
            name="senha"
            required
            placeholder="Digite sua senha"
          />
        </div>

        <button type="submit" class="btn-entrar">Entrar</button>
        <p class="p-login">JÃ¡ tem uma conta?</p>
        <a href="/login" class="btn-login">Login</a>
        <% if (typeof erro !=='undefined' ) { %>
        <div style="color: red">
          <p><%= erro %></p>
        </div>
        <% } %>
      </form>
    </div>
  </body>
</html>
