<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Itens</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f6f9;
        padding: 40px 20px;
      }

      h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
      }

      .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
      }

      .card {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .card h2 {
        font-size: 18px;
        margin-bottom: 10px;
        color: #007bff;
      }

      .card p {
        margin: 5px 0;
        color: #555;
        font-size: 14px;
      }

      .actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 15px;
      }

      .btn-icon {
        border: none;
        background: none;
        cursor: pointer;
        font-size: 18px;
      }

      .btn-icon.edit {
        color: #007bff;
      }

      .btn-icon.delete {
        color: #dc3545;
      }

      .no-items {
        text-align: center;
        color: red;
        margin-bottom: 20px;
        font-weight: bold;
      }

      .add-button {
        display: block;
        margin: 0 auto;
        padding: 12px 24px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .add-button:hover {
        background-color: #218838;
      }
    </style>
  </head>
  <body>
    <h1>Itens Cadastrados</h1>

    <% if (itens.length === 0) { %>
    <div class="no-items">Não há itens cadastrados</div>
    <% } else { %>
    <div class="grid-container">
      <% itens.forEach(item => { %>
      <div class="card">
        <h2><%= item.nome %></h2>
        <p><strong>Descrição:</strong> <%= item.descricao %></p>
        <p><strong>Preço:</strong> R$ <%= item.preco.toFixed(2) %></p>
        <p><strong>Estoque:</strong> <%= item.estoque %> unidades</p>
        <p><strong>Categoria ID:</strong> <%= item.categoria_id %></p>

        <div class="actions">
          <form action="/itens/editar/<%= item.id %>" method="GET">
            <button class="btn-icon edit" title="Editar">&#9998;</button>
          </form>
          <form
            action="/itens/deletar/<%= item.id %>"
            method="POST"
            onsubmit="return confirm('Tem certeza que deseja deletar este item?')"
          >
            <button class="btn-icon delete" title="Deletar">&#128465;</button>
          </form>
        </div>
      </div>
      <% }); %>
    </div>
    <% } %>

    <form action="/itens/createItens" method="GET">
      <button type="submit" class="add-button">Adicionar Item</button>
    </form>
    <% if (erro) { %>
    <div style="color: red">
      <p><%= erro %></p>
    </div>
    <% } %>
  </body>
</html>
