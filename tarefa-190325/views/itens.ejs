<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/itens.style.css" />
    <title>Itens</title>
  </head>
  <body>
    <h1>Itens Cadastrados</h1>

    <% if (itens.length === 0) { %>
    <div class="no-items">Não há itens cadastrados</div>
    <% } else { %>
    <div class="grid-container">
      <% itens.forEach(item => { %>
      <div class="card">
        <h2><%= item.nome %></h2>
        <p><strong>Descrição:</strong> <%= item.descricao %></p>
        <p><strong>Preço:</strong> R$ <%= item.preco.toFixed(2) %></p>
        <p><strong>Estoque:</strong> <%= item.estoque %> unidades</p>
        <p><strong>Categoria ID:</strong> <%= item.categoria_id %></p>

        <div class="actions">
          <form action="/itens/editar/<%= item.id %>" method="GET">
            <button class="btn-icon edit" title="Editar">&#9998;</button>
          </form>
          <form
            action="/itens/deletar/<%= item.id %>"
            method="POST"
            onsubmit="return confirm('Tem certeza que deseja deletar este item?')"
          >
            <button class="btn-icon delete" title="Deletar">&#128465;</button>
          </form>
        </div>
      </div>
      <% }); %>
    </div>
    <% } %>

    <form action="/itens/createItens" method="GET">
      <button type="submit" class="add-button">Adicionar Item</button>
    </form>
    <% if (erro) { %>
    <div style="color: red">
      <p><%= erro %></p>
    </div>
    <% } %>
  </body>
</html>
