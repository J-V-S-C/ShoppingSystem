<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/itens.style.css" />
    <title>Itens</title>
  </head>
  <body>
    <div class="header">
      <h1>Itens Cadastrados</h1>
      <form action="/cart" method="GET">
        <button class="btn-cart">üõí Carrinho</button>
      </form>
    </div>

    <% if (error && itens.length !== 0) { %>
    <div class="error-message">
      <p><%= error %></p>
    </div>
    <% } %> <% if (success) { %>
    <div class="success-message">
      <p><%= success %></p>
    </div>
    <% } %> <% if (itens.length === 0) { %>
    <div class="no-items">N√£o h√° itens cadastrados</div>
    <% } else { %>
    <div class="grid-container">
      <% itens.forEach(item => { %>

      <div class="card">
        <h2><%= item.nome %></h2>
        <p><strong>Descri√ß√£o:</strong> <%= item.descricao %></p>
        <p><strong>Pre√ßo:</strong> R$ <%= item.preco.toFixed(2) %></p>
        <p><strong>Estoque:</strong> <%= item.estoque %> unidades</p>
        <p>
          <strong>Dispon√≠vel para adicionar:</strong> <%= item.disponivel %>
        </p>
        <p><strong>Categoria ID:</strong> <%= item.categoria_id %></p>
        <div class="card-actions">
          <div class="cart">
            <form action="/cart/<%= item.id %>" method="POST">
              <p>
                <strong>Quantidade:</strong>
                <input
                  type="number"
                  name="quantidade"
                  min="1"
                  max="<%= item.disponivel %>"
                  value="1"
                />
              </p>

              <button type="submit" class="btn-add">
                Adicionar ao carrinho
              </button>
            </form>
          </div>
          <div class="actions">
            <form action="/itens/editar/<%= item.id %>" method="GET">
              <button class="btn-icon edit" title="Editar">&#9998;</button>
            </form>
            <form
              action="/itens/deletar/<%= item.id %>"
              method="POST"
              onsubmit="return confirm('Tem certeza que deseja deletar este item?')"
            >
              <button class="btn-icon delete" title="Deletar">&#128465;</button>
            </form>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
    <% } %>

    <form action="/itens/createItens" method="GET">
      <button type="submit" class="add-button">Criar Item</button>
    </form>
  </body>
</html>
